<div class="container">
  <h1>New Game</h1>

  <ul class="letters-list">
    <% @letters.each do |letter|%>
    <li>
      <%= letter %>
    </li>
    <% end %>
  </ul>

  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="word">What's the longest word you can find?</label>
    <div class='form-container'>
      <input type="text" name="word" placeholder="Input a word here" class="user-input">
      <input type="submit" name="submit-btn" value="Play" class="submit-btn">
    </div>
  </form>
</div>
